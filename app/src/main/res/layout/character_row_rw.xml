<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_marginLeft="@dimen/card_view_rw_margin_left_right"
    android:layout_marginTop="@dimen/card_view_rw_margin_top_botton"
    android:layout_marginRight="@dimen/card_view_rw_margin_left_right"
    android:layout_marginBottom="@dimen/card_view_rw_margin_top_botton"
    app:cardCornerRadius="@dimen/card_view_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:background="@drawable/card_rw"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCharacter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_image_height"
            app:srcCompat="@drawable/ic_launcher_background"></ImageView>

        <TextView
            android:id="@+id/tvCharacterAd"
            style="@style/TypographyBlack.Bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_text_heigh"
            android:gravity="center">

        </TextView>


    </LinearLayout>


</androidx.cardview.widget.CardView>